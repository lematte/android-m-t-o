<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:text="Meteo de la ville de :" />

        <EditText
            android:id="@+id/edtVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ville"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Ville :" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Température" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Température(min)" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Température(max)" />

            <TextView
                android:id="@+id/textViewh"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Humidité" />

            <TextView
                android:id="@+id/textViewv"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Vitesse du vent :" />
            <TextView
                android:id="@+id/tvcompteur"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Compteur" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvVille"
                android:layout_width="match_parent"
                android:layout_height="34dp"
            />

            <TextView
                android:id="@+id/tvTempératur"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                 />

            <TextView
                android:id="@+id/tvTempératuremin"
                android:layout_width="match_parent"
                android:layout_height="34dp"
               />

            <TextView
                android:id="@+id/tvTemperaturemax"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                />

            <TextView
                android:id="@+id/tvHumidité"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                />

            <TextView
                android:id="@+id/tvVitesse"
                android:layout_width="match_parent"
                android:layout_height="34dp"
               />
            <TextView
                android:id="@+id/tvRcompteur"
                android:layout_width="match_parent"
                android:layout_height="34dp"
            />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK" />
    </LinearLayout>


</LinearLayout>